<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
<!--    ########### BUTTONS ###########-->
    <style name="PurchaseHistoryButton" parent="Widget.AppCompat.Button">
        <item name="android:paddingVertical">6dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/roundcorner_5</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="Primary" parent="PurchaseHistoryButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/primaryA20</item>
    </style>
    <style name="Borderless" parent="PurchaseHistoryButton">
        <item name="android:textColor">@color/text</item>
        <item name="android:backgroundTint">@color/surfaceA20</item>
    </style>
    <style name="Bordered" parent="PurchaseHistoryButton">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@drawable/bordered_bg</item>
    </style>
    <style name="Danger" >
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@drawable/bordered_bg</item>
        <item name="backgroundTint">@color/dangerA10</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">40dp</item>
    </style>
    <style name="BaseDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/base_dialog_bg</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
    <style name="AppBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/surfaceA10</item>
    </style>

    <style name="BorderedDropdown" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@drawable/bordered_dropdown_bg</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:paddingVertical">8dp</item>
    </style>
    <style name="App_MaterialCalendar_Theme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="android:background">@drawable/bordered_bg</item>
    </style>
    <style name="App_MaterialTimePicker_Theme" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="android:background">@drawable/bordered_bg</item>
    </style>
</resources>