<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <AutoCompleteTextView
        android:id="@+id/category_nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="The name of the category"
        android:ems="10"

        android:hint="@string/name"
        android:inputType="text" />


    <ir.kotlin.kavehcolorpicker.KavehColorPicker
        android:id="@+id/colorPickerView"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_marginHorizontal="6dp" />

    <ir.kotlin.kavehcolorpicker.KavehHueSlider
        android:id="@+id/hueSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <AutoCompleteTextView
        android:id="@+id/category_colorInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="The color of the category"
        android:ems="10"
        android:hint="@string/color"
        android:inputType="text"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/category_errorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/danger" />

</LinearLayout>