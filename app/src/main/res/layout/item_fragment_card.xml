<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/roundcorner_5"
    android:padding="0dp"
    >

    <ImageView
        android:id="@+id/fragmentIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="-20dp"
        android:alpha="70"
        android:padding="0dp"
        android:src="@mipmap/barchart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|end"
        android:paddingHorizontal="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="0dp"
        android:paddingEnd="8dp"
        >

        <TextView
            android:id="@+id/fragmentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginStart="40dp"
            android:layout_weight="1"
            android:textAlignment="textEnd" />

        <CheckBox
            android:id="@+id/displayCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingHorizontal="8dp" />

        <ImageButton
            android:id="@+id/buttonMoveUp"
            style="@style/Bordered"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/move_up"
            android:src="@drawable/baseline_arrow_up_24" />

        <ImageButton
            android:id="@+id/buttonMoveDown"
            style="@style/Bordered"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/move_down"
            android:src="@drawable/baseline_arrow_down_24" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
