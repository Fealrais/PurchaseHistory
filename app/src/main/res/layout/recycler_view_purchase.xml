<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/purchasePriceText"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"

        android:padding="1dp"
        android:text="@string/currency_zero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/purchaseTimeText"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:padding="1dp"
        android:text="@string/lorem"
        app:layout_constraintStart_toEndOf="@+id/purchasePriceText"
        app:layout_constraintTop_toTopOf="@+id/purchasePriceText" />

    <ImageButton
        android:id="@+id/purchase_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/edit_text"
        android:src="@drawable/baseline_edit_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/purchaseCategoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:duplicateParentState="false"
        android:outlineProvider="paddedBounds"
        android:padding="3dp"
        android:text="@string/lorem"
        app:layout_constraintBottom_toBottomOf="@+id/purchaseTimeText"
        app:layout_constraintStart_toEndOf="@+id/purchaseTimeText"
        app:layout_constraintTop_toTopOf="@+id/purchaseTimeText" />

    <TextView
        android:id="@+id/purchaseNoteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:duplicateParentState="false"
        android:outlineProvider="paddedBounds"
        android:padding="3dp"
        android:text="@string/lorem"
        app:layout_constraintBottom_toBottomOf="@+id/purchaseTimeText"
        app:layout_constraintStart_toEndOf="@id/purchaseCategoryText"
        app:layout_constraintTop_toTopOf="@+id/purchaseTimeText"
        app:layout_constraintVertical_bias="1.0" />

    <!--
        <Button
            android:id="@+id/purchase_edit_button"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:padding="1dp"
            android:text="@string/edit_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->
</androidx.constraintlayout.widget.ConstraintLayout>