<resources>
    <!-- Base application theme. -->
    <style name="Theme.PurchaseHistory" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color: Muted Blue for night mode -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color: Muted Purple for night mode -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/gray_200</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/background_color</item>
    </style>
</resources>