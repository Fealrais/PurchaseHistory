<resources>
    <!-- Base application theme. -->
    <style name="Theme.PurchaseHistory" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color: Muted Blue for night mode -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color: Muted Purple for night mode -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/gray_200</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background color -->
        <item name="android:colorBackground">@color/gray_800</item>
    </style>
</resources>